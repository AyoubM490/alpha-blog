<h1>Edit article</h1>
<% if @article.errors.any? %>
  <%= @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>
<%= form_with model: @article, data: { turbo: false } do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to  "Back to articles listing", articles_path %>
